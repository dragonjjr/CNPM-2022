<Window x:Class="QLHS.Views.Regulation.frm_AddSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QLHS.Views.Regulation"
        mc:Ignorable="d"
        Title="Thêm môn học" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="20">Thêm môn học</TextBlock>
            <Border CornerRadius="6" BorderThickness="1" BorderBrush="Black" Margin="0,30,0,0" Width="200">
                <TextBox Name="txtSubjectName" Width="200" FontSize="15"  materialDesign:HintAssist.Hint=" Tên môn học" />
            </Border>

            <WrapPanel Margin="0,60,0,0" HorizontalAlignment="Center">
                <Button Width="80" Background="Green" Foreground="White" Content="Thêm"></Button>
                <Button Width="80" Margin="20,0,0,0" Background="Red" Foreground="White" Content="Xóa"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
