<Window x:Class="QLHS.Views.Class.frm_AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QLHS.Views.Class"
        mc:Ignorable="d"
        Title="Thêm học sinh" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="20">Thêm học sinh vào lớp</TextBlock>
                <WrapPanel HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Border CornerRadius="6" BorderThickness="1" BorderBrush="Black">
                        <TextBox Name="txtSearch" Width="400" FontSize="15"  materialDesign:HintAssist.Hint=" Tìm kiếm" />
                    </Border>
                    <Button Name="btnSearch" Width="100" Margin="30,0,0,0" Content="Tìm kiếm" Foreground="White"></Button>
                </WrapPanel>

                <ListView Margin="0,20,0,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="" Width="50" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Họ tên" Width="150" DisplayMemberBinding="{Binding}" />
                            <GridViewColumn Header="Giới tính" Width="150" DisplayMemberBinding="{Binding}" />
                            <GridViewColumn Header="Năm sinh" Width="150" DisplayMemberBinding="{Binding}" />
                            <GridViewColumn Header="Địa chỉ" Width="150" DisplayMemberBinding="{Binding}" />
                            <GridViewColumn Header="Email" Width="150" DisplayMemberBinding="{Binding}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Name="btnAddIntoClass" Width="120" Background="Green" Foreground="White" Content="Thêm vào lớp"></Button>

            </StackPanel>

        </Grid>
    </Grid>
</Window>
